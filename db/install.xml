<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="artefact/epos/db" VERSION="20101112" COMMENT="XMLDB file for epos tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="artefact_epos_checklist_item"> 
            <FIELDS> 
                <FIELD NAME="id"                TYPE="int" LENGTH="10" SEQUENCE="true" NOTNULL="true" />
                <FIELD NAME="checklist"         TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="descriptor"        TYPE="text" NOTNULL="true" />
                <FIELD NAME="evaluation"        TYPE="int" NOTNULL="true" />
                <FIELD NAME="goal"              TYPE="int" NOTNULL="true" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary"             TYPE="primary" FIELDS="id" />
                <KEY NAME="checklistfk"         TYPE="foreign" FIELDS="checklist" REFTABLE="artefact" REFFIELDS="id" />
            </KEYS>
        </TABLE>
        <TABLE NAME="artefact_epos_descriptor"> 
            <FIELDS> 
                <FIELD NAME="id"                TYPE="int" LENGTH="10" SEQUENCE="true" NOTNULL="true" />
                <FIELD NAME="name"              TYPE="text" NOTNULL="true" />
                <FIELD NAME="competence"        TYPE="text" NOTNULL="true" />
                <FIELD NAME="level"             TYPE="text" NOTNULL="true" />
                <FIELD NAME="descriptorset"     TYPE="text" NOTNULL="true" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary"             TYPE="primary" FIELDS="id" />
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
